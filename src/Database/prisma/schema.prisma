// }

model Lesson {
    id             String   @id @default(cuid())
    lessonId       Int      @unique
    lessonCode     String
    date           DateTime
    startTime      DateTime
    endTime        DateTime
    lessonState    String
    rescheduleInfo String?
    classId        Int
    Class          Class    @relation(fields: [classId], references: [classId])
}

model Class {
    id          String    @id @default(cuid())
    classId     Int       @unique
    className   String    @unique
    longName    String
    lessons     Lesson[]
    untisUser   UntisUser @relation(fields: [untisUserId], references: [id])
    untisUserId String    @map("untis_user_id")
    teacher     Int
}
